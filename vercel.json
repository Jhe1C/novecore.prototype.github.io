{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
        // 為了簡化，暫時移除複雜的 CSP，如果部署成功再加上
        // { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:;" }
      ]
    },
    {
      // 假設 Vite 打包的資源在 dist/assets/ 下，並由 Vercel 從根路徑提供
      // 你需要確認你建置後的靜態資源 (JS/CSS bundle) 是否真的在這個路徑模式下
      "source": "/assets/(.+)", // 匹配 assets 目錄下的任何檔案
      "headers": [
        { "key": "cache-control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      // 匹配 public 目錄下直接訪問的其他常見靜態資源 (如果有的話)
      // 以及根目錄下的 ico, png 等 (例如 favicon.ico)
      "source": "/(.*\\.(?:ico|png|jpg|jpeg|gif|svg|webp|json|xml|txt|map|avif|otf|ttf|eot|woff|woff2))$",
      "headers": [
        { "key": "cache-control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)", // 匹配所有未被其他規則捕獲的路徑
      "destination": "/index.html" // 將它們指向 index.html，讓前端路由處理
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}